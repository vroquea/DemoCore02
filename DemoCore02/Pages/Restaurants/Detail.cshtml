@page "{restaurantId:int}"
@model DemoCore02.DetailModel
@{
    ViewData["Title"] = "Detail";
}

<br />

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">@Model.Restaurant.Name</h2>
    </div>
    <div class="panel-body">
        <div>
            Id: @Model.Restaurant.Id
        </div>
        <div>
            Location: @Model.Restaurant.Location
        </div>
        <div>
            Cuisine: @Model.Restaurant.Cuisine
        </div>
    </div>
</div>


@if (Model.Message != null)
{
    <div class="alert alert-info">
        @Model.Message
    </div>
}

<a asp-page="./List" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> All Restaurants</a>